<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingLeft="20dp"
                android:paddingTop="24dp"
                android:paddingRight="20dp"
                android:paddingBottom="20dp">


    <TextView
        tools:text="50 Shades Darker"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerInParent="true"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="24dp"
        android:id="@+id/tvTitle"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/placeholder"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/tvTitle"
        android:id="@+id/ivImage"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/tvTitle"
        android:layout_alignTop="@id/ivImage"
        android:layout_alignBottom="@id/ivImage"
        android:layout_alignLeft="@id/ivImage"
        android:layout_alignStart="@id/ivImage"
        android:layout_alignRight="@id/ivImage"
        android:layout_alignEnd="@id/ivImage"
        android:scaleType="centerInside"
        android:src="@drawable/play_overlay"
        android:id="@+id/ivPlayOverlay"/>

    <RatingBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ivImage"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="14dp"
        android:layout_marginTop="14dp"
        style="?android:attr/ratingBarStyleSmall"
        android:id="@+id/rbStars"/>

    <TextView
        android:text="Popularity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvPopularity"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/rbStars"/>

    <TextView
        android:text="20"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvPopularityRating"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="24dp"
        android:layout_below="@+id/tvPopularity"/>

    <TextView
        tools:text="When a wounded Christian Grey tries to entice a cautious Ana Steele back into his life, she demands a new arrangement before she will give him another chance. As the two begin to build trust and find stability, shadowy figures from Christianâ€™s past start to circle the couple, determined to destroy their hopes for a future together."
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvPopularityRating"
        android:id="@+id/tvSummary"/>

</RelativeLayout>